name: Isort formatter
on: 
  push:
    paths-ignore:
      - 'docs/**'
      - '.github/**'
      - README.md
  pull_request:

jobs:
  isort:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: isort/isort-action@v1
        with:
          requirements-files: "requirements.txt"